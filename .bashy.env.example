# Example configuration for bashy.sh
# Copy to .bashy.env and adjust values

BASHY_NAME="myapp"
BASHY_PORT="5173"
BASHY_DOMAIN="myapp.local"
BASHY_WORKDIR="/absolute/path/to/your/project"
BASHY_COMMAND="npm run dev -- --host 0.0.0.0 --port 5173"

# Optional extra environment variables (comma-separated K=V pairs)
BASHY_ENV_EXTRA="NODE_OPTIONS=--max_old_space_size=4096"


